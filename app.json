{
  "expo": {
    "name": "Marca AI",
    "slug": "APP_MOBILE_MARCA_AI",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
    "scheme": "marcaai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "usesAppleSignIn": true,
      "supportsTablet": true,
      "bundleIdentifier": "com.marcaai.app",
      "buildNumber": "40",
      "icon": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar sua galeria de fotos para permitir que você selecione uma foto de perfil.",
        "NSCameraUsageDescription": "Este app precisa acessar sua câmera para permitir que você tire uma foto para o perfil.",
        "NSDocumentsFolderUsageDescription": "Este app precisa acessar a pasta de documentos para salvar e compartilhar relatórios em PDF.",
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "marcaai",
            "CFBundleURLSchemes": [
              "marcaai"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.marcaai.app",
      "icon": "./assets/images/LOGO_MARCA_ANDROID_512.png",
      "adaptiveIcon": {
        "backgroundColor": "#4e6bff",
        "foregroundImage": "./assets/images/LOGO_MARCA_ANDROID_512.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MANAGE_DOCUMENTS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "marcaai"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/LOGO_MARCA_IPHONE_1024.png"
    },
    "plugins": [
      "expo-apple-authentication",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.169304206053-642isf3lub3ds2thkiupcje9r7lo7dh7"
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#1a1a1a"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Este app precisa acessar sua galeria de fotos para permitir que você selecione uma foto de perfil.",
          "cameraPermission": "Este app precisa acessar sua câmera para permitir que você tire uma foto para o perfil."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "23d54c76-03c0-4faa-ae6b-41a42ab5c73b"
      }
    }
  }
}
