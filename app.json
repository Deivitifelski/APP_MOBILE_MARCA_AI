{
  "expo": {
    "name": "APP_MOBILE_MARCA_AI",
    "slug": "APP_MOBILE_MARCA_AI",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
    "scheme": "marcaai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.APP-MOBILE-MARCA-AI",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar sua galeria de fotos para permitir que você selecione uma foto de perfil.",
        "NSCameraUsageDescription": "Este app precisa acessar sua câmera para permitir que você tire uma foto para o perfil.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "marcaai",
            "CFBundleURLSchemes": [
              "marcaai"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.anonymous.APP_MOBILE_MARCA_AI",
      "adaptiveIcon": {
        "backgroundColor": "#667eea",
        "foregroundImage": "./assets/images/LOGO_MARCA_ANDROID_512.png",
        "backgroundImage": "./assets/images/LOGO_MARCA_ANDROID_512.png",
        "monochromeImage": "./assets/images/LOGO_MARCA_ANDROID_512.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "marcaai"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/LOGO_MARCA_IPHONE_1024.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/LOGO_MARCA_IPHONE_1024.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#1a1a1a"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Este app precisa acessar sua galeria de fotos para permitir que você selecione uma foto de perfil.",
          "cameraPermission": "Este app precisa acessar sua câmera para permitir que você tire uma foto para o perfil."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
